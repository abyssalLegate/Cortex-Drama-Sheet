<script type="text/worker">
  const afraidValues= ["0","d4","d6","d8","d10","d12"];
  afraidValues.forEach(function(value) {
    on(`clicked:afraid_${value}`, function() {
      setAttrs({
        "afraid": value
      });
    });
  });
  const angryValues= ["0","d4","d6","d8","d10","d12"];
  angryValues.forEach(function(value) {
    on(`clicked:angry_${value}`, function() {
      setAttrs({
        "angry": value
      });
    });
  });
  const exhaustedValues= ["0","d4","d6","d8","d10","d12"];
  exhaustedValues.forEach(function(value) {
    on(`clicked:exhausted_${value}`, function() {
      setAttrs({
        "exhausted": value
      });
    });
  });
  const insecureValues= ["0","d4","d6","d8","d10","d12"];
  insecureValues.forEach(function(value) {
    on(`clicked:insecure_${value}`, function() {
      setAttrs({
        "insecure": value
      });
    });
  });
  const injuredValues= ["0","d4","d6","d8","d10","d12"];
  injuredValues.forEach(function(value) {
    on(`clicked:injured_${value}`, function() {
      setAttrs({
        "injured": value
      });
    });
  });
</script>
