<script type="text/worker">
  const afraidValues = ["d4","d6","d8","d10","d12"];
  afraidValues.forEach(function(value) {
    on(`clicked:afraid_${value}`, function() {
      setAttrs({
        "afraid": value
      });
    });
  });
</script>
