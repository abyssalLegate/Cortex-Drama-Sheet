<input type="text" name="attr_dice_pool" value=''>

<script type="text/worker">
const int = (value, error = 0) => parseInt(value) || error;
const dicepool_attributes = ['afraid', 'angry', 'exhausted', 'insecure', 'injured', 'duty', 'glory', 'justice', 'love', 'power', 'truth'];
const dicepool_sections = ['relationship', 'asset', 'extra', 'location'];
const dicepool_changes = `${dicepool_attributes.forEach(stat => `change:${stat}_flag`).join(' ')} ${dicepool_sections.forEach(stat => `change:repeating_${stat}:${stat}_flag`).join(' ')}`;
on(dicepool_changes, () => {
    getSectionIDs('repeating_relationship', id_relationships => {
        getSectionIDs('repeating_asset', id_assets => {
            getSectionIDs('repeating_extra', id_extras => {
                getSectionIDs('repeating_location', id_locations => {
                    const fieldnames = [];
                    id_relationships.forEach(id => fieldnames.push(
                        `repeating_relationship_${id}_relationship`,`repeating_relationship_${id}_relationship_flag`));
                    id_assets.forEach(id => fieldnames.push(
                        `repeating_asset_${id}_asset`,`repeating_asset_${id}_asset_flag`));
                    id_extras.forEach(id => fieldnames.push(
                        `repeating_extra_${id}_extra`,`repeating_extra_${id}_extra_flag`));
                    id_locations.forEach(id => fieldnames.push(
                        `repeating_location_${id}_location`,`repeating_location_${id}_location_flag`));
                    dicepool_attributes.forEach(stat => fieldnames.push(
                        stat, `${stat}_flag`
                    ));
                    getAttrs(fieldnames, values => {
                        let diceout = [];
                        dicepool_attributes.forEach(stat => {
                            const flag = int(values[`${stat}_flag`]);
                            if(flag) diceout.push(values[stat]);
                        });
                        const getDiceFromSection = (section, ids) => {
                            const output = [];
                            ids.forEach(id => {
                                const flag = int(values[`repeating_${section}_${id}_${section}_flag`]);
                                if(flag) output.push(values[`repeating_${section}_${id}_${section}`]);
                            });
                            return output;
                        };
                        const relationships = getDiceFromSection('relationship', id_relationships);
                        const assets = getDiceFromSection('asset', id_assets);
                        const extras = getDiceFromSection('extra', id_extras);
                        const locations = getDiceFromSection('location', id_locations);
                        diceout = [...diceout, ...relationships, ...assets, ...extras, ...locations];
                        setAttrs({
                            dice_pool: diceout.length() === 0 ? '0' : diceout.join(' + ')
                        });
                    });
                });
            });
        });
    });
});

on("change:dutybase", function() {  
	getAttrs(["dutybase"], function(values) {
		let dutybase = values.dutybase;
		setAttrs({                            
			duty: dutybase
		});
	});
});
on("change:glorybase", function() {  
	getAttrs(["glorybase"], function(values) {
		let glorybase = values.glorybase;
		setAttrs({                            
			glory: glorybase
		});
	});
});

const diceValues= ['0','d4','d6','d8','d10','d12'];
const conditions = ['afraid', 'angry', 'exhausted', 'insecure', 'injured'];
conditions.forEach(function(condition) {
    diceValues.forEach(function(value) {
        on(`clicked:${condition}_${value}`, function() {
            setAttrs({
                [condition]: value
            });
        });
    });
});

</script>
